<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this supa from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <% for pi in 0..@area_points.length-1 do %>
    <tr>
      <td><%= f.label "#{pi}" %></td>
      <td>
        <%= f.label :lng %>
        <%= f.text_field 'area_points[][lng]', :value => @area_points[pi][:lng] %>
        &nbsp;
        <%= f.label :lat %>
        <%= f.text_field 'area_points[][lat]', :value => @area_points[pi][:lat] %>
      </td>
    </tr>
    <% end %>
  </table>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>